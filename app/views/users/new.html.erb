<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style type="text/css">
      html, body{ margin:0; height:100%; }
      .input{
        margin-bottom: 20px;
      }
      .group_div{
        margin-left: 10%;
        margin-right: 10%;
      }
      .head_img{
        width: 180px;
        height: 180px;
        margin-bottom: 20px;
      }
      .btn{
        width: 80%;
      }
      .alert{
        text-align: center;
      }
    </style>
	</head>
	<body>
    <%= render 'layouts/navbar' %>  
    
    <div class="container">
      <!-- 操作提示信息 -->
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %> 
      <% end %>

      <div class="row">
        <div class="col-xs-offset-3">
          <img class="img-circle img-responsive head_img" src='<%= image_path("demo_image_file.jpg") %>'>
        </div>
      </div>
      <br>
      <div class="row">
        <!-- <form class="bs-example bs-example-form"> -->
        <%= form_for :user, url: users_path do |f| %>
          <div class='group_div'>
            <div class="input-group input">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span> 姓名
              </span>
              <input type="text" name="name" class="form-control" value="" required>
            </div>
          </div>
          <div class="group_div">
            <div class="input-group input">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-phone"></span> 手机                
              </span>
              <input type="text" name="phone" class="form-control" required>
            </div>
          </div>
            <div class="group_div">
              <div class="input-group input">
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-info-sign"></span> 职位                
                </span>
              <input type="text" name="profession" class="form-control" required>
            </div>
          </div>
          <br>
          <button type="submit" class="btn btn-default center-block">确定</button>
        <% end %>
      </div>
    </div>

	</body>
</html>